<launch> 

    <!-- Set the use_sim_time parameter for simulation -->
    <param name="/use_sim_time" value="true"/>

    <!-- Launch Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find my_robot)/worlds/test.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="recording" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Launch RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find my_robot)/config/config.rviz"/>

    <!-- Launch controller -->
    <include file="$(find my_robot)/launch/joy_controller.launch"/>
    
    <!-- Launch both robots -->
    <group ns="robot">
        <param name="robot_description" command="$(find xacro)/xacro '$(find my_robot)/description/robot.urdf.xacro'"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" value="robot" />
        </node>
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
            args="-urdf -model robot -param robot_description -x 0 -y 0 -z 0 -R 0 -P 0 -Y 0" />
    </group>

    <group ns="drone">
        <param name="robot_description" command="$(find xacro)/xacro '$(find my_robot)/description/drone.urdf.xacro'"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" value="drone" />
        </node>
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
            args="-urdf -model drone -param robot_description -x -3 -y 0 -z 5 -R 0 -P 0 -Y 0" />
    </group>

</launch> 
